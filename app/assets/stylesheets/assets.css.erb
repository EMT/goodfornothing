/* Graceful image replacement */

  .ir { position: relative; display: block; overflow: hidden; }
  .ir a { cursor: pointer; }
  .ir span { 
    width: 100%; height: 100%;
    position: absolute; top: 0; left: 0;
    background-repeat: no-repeat;
    background-position: top left;
  }

/* Icons */

	.icon {
		text-indent: -1337px;
		width: 20px;
		height: 20px;
		display: block;
		background-repeat: no-repeat;
		background-position: 0 0;
	}
	
	.social .facebook { background: url(icons/social_facebook.gif); }
	.social .twitter { background: url(icons/social_twitter.gif); }
	
	.pipeline { background-image: url(icons/pipeline.png); height: 27px; width: 27px; }

/* CTA */

	.cta a {
		background-color: #D0122D;
		color: #ffffff;
		display: inline-block;
		line-height: 30px;
		font-family: "Good for Nothing";
		font-size: 13px;
		padding: 0 15px;
		text-align: center;
		background-image: url(assets/cta_left.gif), url(assets/cta_right.gif);
		background-position: left center, right center;
		background-repeat: no-repeat;
	}
	
	aside .cta a,
	.cta.strong a {
		color: #ffffff;
		display: inline-block;
		line-height: 28px;
		font-family: "Good for Nothing";
		font-size: 22px;
		padding: 25px 15px 34px 15px;
		width: 220px;
		text-align: center;
		background-color: transparent;
		background-image: url(assets/cta_aside.png);
		background-position: left top;
		background-repeat: no-repeat;
	}
	
	.cta.strong { text-align: center; margin-bottom: 30px; }
	
	aside .cta a:hover, aside .cta a:focus, aside .cta a:active,
	.cta.strong a:hover, .cta.strong a:focus, .cta.strong a:active {
		text-decoration: none;
		background-position: left bottom;
		padding: 41px 0px 18px;
	}

	aside .cta:first-child {
		margin-top: 35px;
		margin-bottom: 60px;
	}

/* Graphical counters */

	.badge_count {
		padding: 20px 50px 20px 32px;
		margin: 0;
		width: 155px;
		height: 136px;
		text-align: center;
		font-family: "Good for Nothing";
		font-size: 16px;
		list-style-type: none;
		color: #ffffff;
		display: block;
		line-height: 17px;
		background: no-repeat url(assets/badge_counter.png);
	}
	
	.badge_count span {
		font-size: 60px;
		line-height: 74px;
		display: block;
		margin-bottom: 6px;
	}
	
	.badge_count a {
		color: #fff;
	}
	
	.badge_count a:hover,
	.badge_count a:focus,
	.badge_count a:active {
		text-decoration: none;
		font-size: 17px;
		padding-top: 18px;
	}
	
	.ticker_count {
		padding-top: 35px;
		padding-bottom: 10px;
		position: relative;
	}
	
	.ticker_count span {
		display: inline-block;
		width: 70px;
		text-align: center;
		font-size: 60px;
		font-family: "Good for Nothing";
		height: 69px;
		padding-top: 27px;
		color: #ffffff;
		line-height: 73px;
		margin-right: 10px;
		background: url(assets/ticker_counter.gif) no-repeat;
	}
	
	.ticker_count span:nth-child(4) {
		margin: 0;
	}
	
	.ticker_count a {
		font-size: 18px;
		line-height: 19px;
		font-family: "Good for Nothing";
		position: absolute;
		top: 0;
		width: 100%;
		text-align: center;
		color: #61514D;
	}
	
	.ticker_count a:hover,
	.ticker_count a:focus,
	.ticker_count a:active {
		text-decoration: none;
		font-size: 19px;
	}
	
	.ticker_count a:before {
		content: "";
		background: url(icons/arrow_left.png) no-repeat 0 0;
		display: inline-block;
		width: 30px;
		height: 19px;
		top: 10px;
		padding-right: 10px;
		position: relative;
	}
	
	.ticker_count a:after {
		content: "";
		background: url(icons/arrow_right.png) no-repeat 100% 0;
		display: inline-block;
		width: 30px;
		height: 19px;
		top: 10px;
		padding-left: 10px;
		position: relative;
	}
	
/* Tooltip */

	.tooltip {
		display:none;
		background:transparent url(<%= asset_path "assets/tooltip.png" %>) no-repeat;
		font-size: 13px;
		height: 30px;
		width: 121px;
		padding: 10px 0;
		color:#ffffff;
		font-family: "Good for Nothing";
		text-align: center;
  }
	
/* Buttons */

	.highlight_button { 
		margin: 0; padding: 0; 
		width: 280px;
	}

	.highlight_button a {
		color: #ffffff;
		font-size: 19px;
		text-align: center;
		font-family: "Good for Nothing";
		padding: 25px;
		padding-bottom: 26px;
		line-height: 41px;
		text-align: center;
		display: block;
		width: 230px;
		background: url(assets/highlight_button.png) no-repeat center top;
	}
	
	.highlight_button a:focus,
	.highlight_button a:active,
	.highlight_button a:hover
	{ text-decoration: none; font-size: 21px; }

/* Grid lists */

	.grid_list {
		padding: 0;
		overflow: hidden;
		width: 100%;
		margin-bottom: 20px;
	}

	.grid_list li {
		list-style-type: none;
		padding: 0;
		float: left;
		margin: 0 20px 20px 0;
		width: 200px;
	}
	
	.grid_list li:nth-child(3n+3),
	.grid_four li:nth-child(4n+4),
	.grid_two li:nth-child(2n+2) {
		margin-right: 0;
	}
	
	.grid_list li a img {
		display: block;
	}
	
	.grid_four li {
		width: 145px;
	}
	
	.grid_two li {
		width: 310px;
	}
	
	.grid_two li img {
		width: 310px;
	}
	
	.grid_four li:nth-child(3n+3),
	.grid_two li:nth-child(3n+3) { 
		margin-right: 20px;
	}
	
	.grid_list .logo {
		background: #ffffff;
		text-align: center;
		font-weight: bold;
		color: #60504D;
		height: 80px;
		display: block;
		font-size: 20px;
		padding: 50px 20px 0;
		text-transform: uppercase;
	}
	
	.grid_list .logo:hover,
	.grid_list .logo:active,
	.grid_list .logo:focus {
		text-decoration: none;
	}
	
	.grid_list li.note {
		width: 180px;
		height: 214px;
		padding: 40px 20px 20px;
		background: url(<%= asset_path "blocks/note.png" %>) no-repeat top left;
	}
	
/* Panels */

	.panel {
		float: left;
		overflow: hidden;		
		width: 450px;
		margin: 0 40px 40px 0;
		min-height: 300px;
	}
	
	.panel h2 {
		font-size: 18px;
		line-height: 20px;
		font-family: "Good for Nothing";
	}
	
	.single .panel:nth-child(2n+2) {
		margin-right: 0;
	}
	
/* Articles */ 
	
	.block h3 {
		margin-bottom: 3px;
	}
	
	.block img.hero {
		margin-bottom: 15px;
		display: block;
	}
	
	article.post {
		position: relative;
		width: 640px;
	}
	
	article.post iframe,
	article.post img {
		max-width: 100%;
	}

/* Abstract */

	.abstract {
		padding: 0 0 20px 0;
	}
	
/* Warbling grid */

	.warbling a {
		display: block;
		text-align: center;
		font-family: "Good for Nothing";
		color: #222;
		font-size: 20px;
		line-height: 24px;
		padding: 130px 0 15px;
		background-repeat: no-repeat;
		background-position: center top;
	}
	
	.warbling a:hover,
	.warbling a:active,
	.warbling a:focus {
		font-size: 23px;
		text-decoration: none;
	}

