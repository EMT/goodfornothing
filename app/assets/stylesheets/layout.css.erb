/*
	Red:   #E31937
	Grey:  #555555
*/


@media all {

	body { 
		background-color: #ffffff;
	}
   
	.container {
	    width: 960px; margin: 0 auto; 
	    overflow: hidden; display: block;
	}
	
	/*= header */
	
		header {
			padding: 20px 0 1px;
			overflow: hidden;
			background: url(layout/border_horizontal.gif) repeat-x 109px bottom;
		}
			
		header h1#branding,
		header p#branding a {
			color: #E31937;
			font-size: 34px;
			line-height: 110px;
			padding-left: 120px;
			font-family: Reader;
			display: block;
			float: left;
			margin: 0;
			background: no-repeat 0 50% url(branding/goodfornothing.gif);
		}
		
		header p#branding { margin: 0; }
		
		header #branding a:hover,
		header #branding a:focus,
		header #branding a:active {
			text-decoration: none;
		}
		
		header #social_navigation {
			float: right;
			width: 170px;
			padding-top: 0px;
		}
		
		header #social_navigation ul {
			padding: 0;
		}
		
		header #social_navigation .social li {
			list-style-type: none;
			padding: 0;
			float: right;
			margin-right: 15px;
		}
		
		header #social_navigation .social li:first-child { margin-right: 0; }
		
	/*= primary_navigation */
	
		#primary_navigation {
			padding: 10px 0 18px;
			background: url(layout/border_horizontal.gif) repeat-x bottom;
		}
	
		#primary_navigation ul {
			padding: 0;
			float: left;
		}
	
		#primary_navigation ul li {
			list-style-type: none;
			padding: 0;
			display: inline-block;
			margin-right: 15px;
		}
		
		#primary_navigation ul#member_navigation {
			float: right;
		}
		
		#primary_navigation ul#member_navigation li {
			margin: 0 0 0 5px;
		}

	/*= main */

		#main {
			padding: 30px 0 150px;
			background: no-repeat left bottom url(layout/footer.png)
		}
	
		#main section#primary_content {
			width: 700px;
			float: left;
			overflow: hidden;
		}
	
		#main section#primary_content article {
			margin-bottom: 20px;
		}
		
		#main section#primary_content article h2, 
		#main section#primary_content article h3 {
			margin-bottom: 5px;
		}
	
		#main aside#secondary_content {
			float: right;
			width: 220px;
		}
		
		#main aside#secondary_content h2 {
			color: #E31937;
			line-height: 34px;
		}
	
	/*= footer */
	
		footer {
			background: #4D4D4D;
			padding: 30px 0;
			color: #ffffff;
		}
		
		footer h2 {
			border-bottom: 1px solid #404040;
			padding-bottom: 5px;
		}
		
		footer ul {
			padding: 0;
		}
		
		footer a { 
			color: #ffffff;
		}
		
		footer section {
			width: 20%;
			margin-right: 5%;
			float: left;
		}
		
		footer section:last-child,
		footer section p:last-child { 
			margin: 0; 
		}
		
		section#colophon {
			background: #333333;
			color: #ffffff;
			padding: 12px 0;
			overflow: hidden;
		}
		
		section#colophon p {
			margin-bottom: 0;
			line-height: 27px;
		}
		
		section#colophon .icon {
			float: right;
			display: inline-block;
		}

}
