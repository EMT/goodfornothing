/*
	Red:    #D0122D
	Brown:  #61514D
	Blue:   #9ED4D6
	Teal:   #085156
*/


@media all {

	body { 
		background-color: #F0ECE9;
	}
   
	.container {
	    width: 960px; margin: 0 auto; 
	    overflow: hidden; display: block;
			position: relative;
	}
	
	/*= header */
	
		header {
			overflow: hidden;
			background: #ffffff repeat-x center bottom url(layout/header.gif);
			text-align: center;
		}
		
		header .container {
			background: no-repeat url(branding/bird.png) 20px 140px;
			padding-bottom: 90px;
		}
		
		header #branding {
			display: inline-block;
			margin: 45px auto 25px;
			padding: 0;
			min-width: 274px;
			background: #D0122D url(assets/horizontal_splodge.gif) no-repeat top left;
		}
		
		header h1#branding,
		header p#branding,
		header p#branding a {
			color: #ffffff;
			font-size: 24px;
			line-height: 42px;
			padding-top: 5px;
			font-family: "Good for Nothing";
		}
				
		header #branding a:hover,
		header #branding a:focus,
		header #branding a:active {
			text-decoration: none;
		}
		
		header #secondary_navigation {
			position: absolute;
			top: 0px;
			left: 0;
			width: 100%;
		}
		
		header #secondary_navigation .social {
			padding: 10px 0;
			float: left;
			width: 170px;
		}
		
		header #secondary_navigation .social li {
			list-style-type: none;
			padding: 0;
			float: left;
			margin-left: 6px;
		}
		
		header #secondary_navigation .social li:first-child { margin-right: 0; }
		
		header #secondary_navigation .registration {
			padding: 28px 0 0;
			float: right;
			width: 180px;
			margin: 0;
			text-align: center;
			color: #ffffff;
			background: #F0ECE9 url(assets/hanging_sign.gif) no-repeat;
			min-height: 21px;
			font-size: 12px;
			font-family: "Good for Nothing";
		}
		
		header #secondary_navigation .registration a { 
			color: #ffffff;
		}
		
		header #primary_navigation {
				font-family: "Good for Nothing";
				position: relative;
				z-index: 20;
		}
	
		header #primary_navigation ul {
				margin: 0 auto;
				padding: 0;
		}
	
		header #primary_navigation ul li {
				list-style-type: none;
				padding: 0;
				display: inline-block;
				margin-right: 12px;
				font-size: 14px;
				line-height: 14px;
				letter-spacing: 1px;
			}
			
		header #primary_navigation ul li:last-child { margin: 0;}
		
		header #primary_navigation ul li a {
				color: #60504D;
				padding: 6px 3px;
				display: block;
			}
		
		header #primary_navigation ul li a.active,
		header #primary_navigation ul li a:hover,
		header #primary_navigation ul li a:focus,
		header #primary_navigation ul li a:active {
				text-decoration: none;
				color: #D0122D;
				background: url(assets/hover_2.png) repeat-x bottom left;
				
		}
		
		header #primary_navigation ul li:nth-child(3) a { padding: 12px 13px 16px; }
		header #primary_navigation ul li:nth-child(3) a.active,
		header #primary_navigation ul li:nth-child(3) a:hover,
		header #primary_navigation ul li:nth-child(3) a:focus,
		header #primary_navigation ul li:nth-child(3) a:active {
				text-decoration: none;
				background: url(assets/hover_1.png) no-repeat top center;
		}
		
		header #primary_navigation ul li:first-child a { padding: 15px 14px 16px 17px; }
		header #primary_navigation ul li:first-child a.active,
		header #primary_navigation ul li:first-child a:hover,
		header #primary_navigation ul li:first-child a:focus,
		header #primary_navigation ul li:first-child a:active {
				text-decoration: none;
				background: url(assets/hover_3.png) no-repeat top center;
		}
		
		header #primary_navigation ul li:last-child a { padding: 11px 10px 13px; }
		header #primary_navigation ul li:last-child a.active,
		header #primary_navigation ul li:last-child a:hover,
		header #primary_navigation ul li:last-child a:focus,
		header #primary_navigation ul li:last-child a:active {
				text-decoration: none;
				background: url(assets/hover_4.png) no-repeat top center;
		}

	/*= main */

		#main {
			padding: 0 0 30px;
		}
	
		#main #primary_content {
			width: 640px;
			padding: 35px 0 0 0;
			float: left;
		}
		
		#main #primary_content.single {
			width: 960px;
			padding: 35px 20px 0;
		}
	
		#main aside#secondary_content {
			float: right;
			width: 240px;
		}
		
	/*= footer */
	
		footer {
			padding: 50px 0;
			background: #61514d repeat-x left top url(layout/footer.gif);
			color: #ffffff;
		}
		
		footer h2 {
			padding-bottom: 5px;
			margin-bottom: 16px;
			color: #ffffff;
		}
		
		footer ul {
			padding: 0;
		}
		
		footer a { 
			color: #ffffff;
		}
		
		footer p a {
			color: #ffffff;
			text-decoration: underline;
		}
		
		footer p a:hover, 
		footer p a:focus, 
		footer p a:active {
			text-decoration: none;
		}
		
		footer section {
			width: 400px;
			float: left;
		}
		
		footer section h2 {
			font-family: "Good for Nothing";
			
		}
		
		footer section:last-child,
		footer section p:last-child { 
			margin: 0; 
		}
		
		section#colophon {
			background: #61514D;
			color: #ffffff;
			padding: 12px 0;
			overflow: hidden;
		}
		
		section#colophon p {
			margin-bottom: 0;
			line-height: 27px;
		}
		
		section#colophon a {
			color: #ffffff;
			text-decoration: underline;
		}
		
		section#colophon a:hover, section#colophon a:focus, section#colophon a:active {
			text-decoration: none;
		}
		
		section#colophon .icon {
			float: right;
			display: inline-block;
		}

}
