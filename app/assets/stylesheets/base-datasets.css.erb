/* =form */
 
  form.primary { 
    padding: 40px 60px;
		background: #9adada;
		color: #ffffff;
		width: 500px;
		margin: 0 auto 40px;
		text-align: center;
		background-position: top left, top right, bottom right;
		background-repeat: no-repeat, no-repeat, no-repeat;
		background-image: url(<%= asset_path "blocks/form_top_left.gif" %>),
											url(<%= asset_path "blocks/form_top_right.gif" %>),
											url(<%= asset_path "blocks/form_bottom_right.gif" %>);
  }

	form.primary ::selection { background:#085156; color:#ffffff; }
	form.primary ::-moz-selection { background:#085156; color:#ffffff; }
	form.primary ::-webkit-selection { background:#085156; color:#ffffff; }

	form.primary h1 {
		color: #ffffff;
		margin-bottom: 37px;
		background: url(<%= asset_path "assets/teal_squiggle.png" %>) repeat-x center bottom;
		padding: 0 10px 5px;
		display: inline-block;
	}
	
	form.primary p {
		margin-bottom: 17px;
		text-align: left;
		color: #085156;
		font-size: 14px;
	}
	
	form.primary p.form_arrow_down {
		padding: 0 0px 9px;
	}
	
	form.primary p.form_arrow_down a {
		display: inline-block;
		padding: 0 2px;
	}
	
	form.primary p.form_arrow_down span {
		display: inline-block;
		position: relative;
	}
	
	form.primary p.form_arrow_down span:after {
		content: '';
		width: 20px;
		height: 15px;
		display: block;
		top: 10px;
		right: -28px;
		position: absolute;
		background: url(<%= asset_path "assets/form_arrow.png" %>) no-repeat top left;
	}
	
	form.primary .hint {
		position: absolute;
		top: 6px;
		right: 12px;
	}
	
	form.primary .hint a {
		width: 30px;
		height: 33px;
		font-size: 20px;
		font-family: "Good for Nothing";
		text-align: center;
		line-height: 34px;
		color: #ffffff;
		display: block;
		background: #9adada url(<%= asset_path "assets/input_splodge.gif" %>) no-repeat center center;
	}
	
	form.primary .hint a:hover,
	form.primary .hint a:active,
	form.primary .hint a:focus {
		font-style: italic;
		text-decoration: none;
	}
	
	form.primary a {
		color: #ffffff;
	}
  
  form.primary fieldset {
    padding: 10px 0 20px;
  }

	form.primary fieldset:last-child {
		padding: 10px;
	}

	form.primary legend {
		font-size: 26px;
		line-height: 28px;
		padding-bottom: 4px;
		padding-top: 2px;
		color: #ffffff;
		font-family: "Good for Nothing";
		background: url(<%= asset_path "assets/teal_squiggle.png" %>) repeat-x center bottom;
	}
	
	form.primary .footnote {
		color: #ffffff;
		text-align: center;
		padding-top: 10px;
		font-size: 13px;
		width: 85%;
		margin: 0 auto;
		line-height: 18px;
	}
	
	form.primary .footnote a {
		color: #085156;
	}
  
/* =label */
 
  form.primary .string label,
 	form.primary .email label,
	form.primary .url label,
	form.primary .password label { 
    display: block; 
    position: relative;
		text-align: left;
		color: #9adada;
		font-family: "Good for Nothing";
    font-size: 16px;
		line-height: 20px;
    border: 0;
  }

	form.primary .input label.js {
		position: absolute;
		top: 13px;
		left: 18px;
	}
  
/* =input */

	form.primary .input {
		position: relative;
	}

  form.primary .string input, 
	form.primary .email input,
	form.primary .url input,
	form.primary .password input {  
    padding: 13px 18px 11px;
		margin-top: 0;
		color: #9adada;
		background-color: #ffffff;
		background-position: top left, top right;
		background-repeat: no-repeat, no-repeat;
		background-image: url(<%= asset_path "blocks/input_left_2.gif" %>),
											url(<%= asset_path "blocks/input_right_2.gif" %>);
		font-family: "Good for Nothing";
    margin-bottom: 20px; 
    font-size: 16px;
		line-height: 20px;
    border: 0;
		width: 464px;
		-webkit-font-smoothing: antialiased;
  }

  form.primary .string:nth-child(odd) input,
	form.primary .email:nth-child(odd) input,
	form.primary .url:nth-child(odd) input,
	form.primary .password:nth-child(odd) input {
		background-image: url(<%= asset_path "blocks/input_left_3.gif" %>),
											url(<%= asset_path "blocks/input_right.gif" %>);
	}
	
	form.primary .string:nth-child(3n) input,
	form.primary .email:nth-child(3n) input,
	form.primary .url:nth-child(3n) input,
	form.primary .password:nth-child(3n) input {
		background-image: url(<%= asset_path "blocks/input_left.gif" %>),
											url(<%= asset_path "blocks/input_right_3.gif" %>);
	}
 
 /* =boolean */
 
	form.primary .boolean {
		margin-top: -10px;
	}

  form.primary .boolean label {
   	text-align: left;
		padding-left: 10px;
  }

	form.primary .boolean input {
		margin-right: 8px;
  }

 /* =textarea */

 form.primary textarea {  
    margin-bottom: 20px;
		margin-top: 0;
    border: 0;
    padding: 20px;
		font-size: 15px;
		color: #9adada;
		background: #ffffff;
		line-height: 22px;
		font-weight: normal;
		width: 450px;
		font-family: karlaregular;
		background-color: #ffffff;
		-webkit-font-smoothing: antialiased;
		resize: none; 
		background-position: top left, top right, bottom left, bottom right;
		background-repeat: no-repeat;
		background-image: url(<%= asset_path "blocks/textarea_top_left.gif" %>),
											url(<%= asset_path "blocks/textarea_top_right.gif" %>),
											url(<%= asset_path "blocks/textarea_bottom_left.gif" %>),
											url(<%= asset_path "blocks/textarea_bottom_right.gif" %>);
  }

  form.primary .text label { 
		font-size: 15px;
		color: #9adada;
		background: #ffffff;
		line-height: 22px;
		font-weight: normal;
		width: 80%;
		font-family: karlaregular;
		text-align: left;
  }

	form.primary .text label.js {
		position: absolute;
		top: 17px;
		left: 24px;
	}

	/* =submit */
	
	form.primary input[type="submit"] {
		color: #ffffff;
		display: inline-block;
		line-height: 28px;
		font-family: "Good for Nothing";
		font-size: 22px;
		padding: 25px 15px 34px 15px;
		width: 240px;
		text-align: center;
		background-color: transparent;
		background-image: url(assets/cta_aside.png);
		background-position: left top;
		background-repeat: no-repeat;
		border: 0;
		cursor: pointer;
	}
	
	form.primary input[type="submit"]:active {
		text-decoration: none;
		background-position: left bottom;
		padding: 41px 20px 18px 0px;
	}

	/* =ranges */
	
	.slider {
		background: url(<%= asset_path "assets/range_background.png" %>) no-repeat left center;
		height: 21px;
		position: relative;
		cursor: pointer;
		border: 0;
		width: 450px;
		display: block;
		margin-bottom: 20px;
	}

	.slider .progress {
		height: 20px;
		background-color: #D0122D;
		display: none;
	}

	.slider .handle {
		height: 55px;
		width: 50px;
		top: -18px;
		position:absolute;
		display:block;
		cursor: move;
		background: url(<%= asset_path "assets/range_handle.png" %>) no-repeat center center;
	}

	input.range {
	  display: none;
	}

/* Tables */

	table { margin-bottom: 14px; }
