/* =form */
 
  .single form { 
    padding: 40px 60px;
		background: #9ED4D6;
		color: #ffffff;
		width: 500px;
		margin: 10px auto 40px;
		text-align: center;
  }

	.single form ::selection { background:#085156; color:#ffffff; }
	.single form ::-moz-selection { background:#085156; color:#ffffff; }
	.single form ::-webkit-selection { background:#085156; color:#ffffff; }

	.single form h1 {
		color: #ffffff;
		margin-bottom: 40px;
		background: url(<%= asset_path "assets/teal_squiggle.png" %>) repeat-x center bottom;
		padding: 0 10px 5px;
		display: inline-block;
	}
	
	.single form p {
		margin-bottom: 15px;
		font-weight: bold;
		text-align: left;
	}
	
	.single form .footnote {
		font-size: 12px;
		text-align: center;
		line-height: 16px;
		margin-top: 25px;
	}
	
	.single form a {
		color: #085156;
	}
  
  .single form fieldset {
    padding: 10px 0 20px;
  }

	.single form fieldset:last-child {
		padding: 0;
	}

	.single legend {
		font-size: 26px;
		line-height: 28px;
		padding-bottom: 4px;
		color: #ffffff;
		font-family: "Good for Nothing";
		background: url(<%= asset_path "assets/teal_squiggle.png" %>) repeat-x center bottom;
	}
  
/* =label */
 
  .single label { 
    display: block; 
    position: relative;
  }
  
/* =input */

  .single .string input,
	.single .email input,
	.single .url input,
	.single .password input  { 
    padding: 12px 10px;
		color: #9ED4D6;
		background: #ffffff;
		font-family: "Good for Nothing";
    margin-bottom: 25px; 
    font-size: 16px;
		line-height: 20px;
    border: 0;
		width: 480px;
  }
 
 /* =checkbox */
 
  .single .checkbox label {
    margin-bottom: 0.75em;
  }

 /* =textarea */

 .single textarea {  
    margin-bottom: 1em; 
    border: 0;
    padding: 15px 10px;
		font-size: 16px;
		color: #9ED4D6;
		background: #ffffff;
		line-height: 20px;
		width: 480px;
		font-family: karlaregular;
  }


	/* =submit */
	
	.single input[type="submit"] {
		color: #ffffff;
		display: inline-block;
		line-height: 28px;
		font-family: "Good for Nothing";
		font-size: 22px;
		padding: 25px 15px 34px 15px;
		width: 240px;
		text-align: center;
		background-color: transparent;
		background-image: url(assets/cta_aside.png);
		background-position: left top;
		background-repeat: no-repeat;
		border: 0;
		cursor: pointer;
	}
	
	.single input[type="submit"]:active {
		text-decoration: none;
		background-position: left bottom;
		padding: 41px 20px 18px 0px;
	}

	/* =ranges */
	
	.slider {
		background: #ffffff;
		height: 20px;
		position: relative;
		cursor: pointer;
		border: 0;
		width: 500px;
		display: block;
		margin-bottom: 20px;
	}

	.slider .progress {
		height: 20px;
		background-color: #D0122D;
		display: none;
	}

	.slider .handle {
		height: 55px;
		width: 50px;
		top: -18px;
		position:absolute;
		display:block;
		cursor: move;
		background: url(<%= asset_path "assets/range_handle.png" %>) no-repeat center center;
	}

	input.range {
	  display: none;
	}

/* Tables */

	table { margin-bottom: 14px; }
