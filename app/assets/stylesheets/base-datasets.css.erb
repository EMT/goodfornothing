/* =form */
 
  .single form { 
    padding: 40px 60px;
		background: #9adada;
		color: #ffffff;
		width: 500px;
		margin: 0 auto 40px;
		text-align: center;
		background-position: top left, top right, bottom right;
		background-repeat: no-repeat, no-repeat, no-repeat;
		background-image: url(<%= asset_path "blocks/form_top_left.gif" %>),
											url(<%= asset_path "blocks/form_top_right.gif" %>),
											url(<%= asset_path "blocks/form_bottom_right.gif" %>);
  }

	.single form ::selection { background:#085156; color:#ffffff; }
	.single form ::-moz-selection { background:#085156; color:#ffffff; }
	.single form ::-webkit-selection { background:#085156; color:#ffffff; }

	.single form h1 {
		color: #ffffff;
		margin-bottom: 37px;
		background: url(<%= asset_path "assets/teal_squiggle.png" %>) repeat-x center bottom;
		padding: 0 10px 5px;
		display: inline-block;
	}
	
	.single form p {
		margin-bottom: 17px;
		text-align: left;
		color: #085156;
		font-size: 14px;
	}
	
	.single form .hint {
		position: absolute;
		top: 6px;
		right: 12px;
	}
	
	.single form .hint a {
		width: 30px;
		height: 33px;
		font-size: 20px;
		font-family: "Good for Nothing";
		text-align: center;
		line-height: 34px;
		color: #ffffff;
		display: block;
		background: #9adada url(<%= asset_path "assets/input_splodge.gif" %>) no-repeat center center;
	}
	
	.single form .hint a:hover,
	.single form .hint a:active,
	.single form .hint a:focus {
		font-style: italic;
		text-decoration: none;
	}
	
	.single form a {
		color: #085156;
	}
  
  .single form fieldset {
    padding: 10px 0 20px;
  }

	.single form fieldset:last-child {
		padding: 10px;
	}

	.single legend {
		font-size: 26px;
		line-height: 28px;
		padding-bottom: 4px;
		color: #ffffff;
		font-family: "Good for Nothing";
		background: url(<%= asset_path "assets/teal_squiggle.png" %>) repeat-x center bottom;
	}
	
	.single form .footnote {
		color: #ffffff;
		text-align: center;
		padding-top: 10px;
		font-size: 13px;
		width: 85%;
		margin: 0 auto;
		line-height: 18px;
	}
  
/* =label */
 
  .single label { 
    display: block; 
    position: relative;
  }
  
/* =input */

	.single .input {
		position: relative;
	}

  .single .string input,
	.single .email input,
	.single .url input,
	.single .password input  { 
    padding: 13px 18px 11px;
		margin-top: 0;
		color: #9adada;
		background-color: #ffffff;
		background-position: top left, top right;
		background-repeat: no-repeat, no-repeat;
		background-image: url(<%= asset_path "blocks/input_left_2.gif" %>),
											url(<%= asset_path "blocks/input_right_2.gif" %>);
		font-family: "Good for Nothing";
    margin-bottom: 20px; 
    font-size: 16px;
		line-height: 20px;
    border: 0;
		width: 464px;
		-webkit-font-smoothing: antialiased;
  }

  .single .string:nth-child(odd) input,
	.single .email:nth-child(odd) input,
	.single .url:nth-child(odd) input,
	.single .password:nth-child(odd) input {
		background-image: url(<%= asset_path "blocks/input_left_3.gif" %>),
											url(<%= asset_path "blocks/input_right.gif" %>);
	}
	
	.single .string:nth-child(3n) input,
	.single .email:nth-child(3n) input,
	.single .url:nth-child(3n) input,
	.single .password:nth-child(3n) input {
		background-image: url(<%= asset_path "blocks/input_left.gif" %>),
											url(<%= asset_path "blocks/input_right_3.gif" %>);
	}
 
 /* =boolean */
 
	.single .boolean {
		margin-top: -10px;
	}

  .single .boolean label {
   	text-align: left;
		padding-left: 10px;
  }

	.single .boolean input {
		margin-right: 8px;
  }

 /* =textarea */

 .single textarea {  
    margin-bottom: 20px;
		margin-top: 0;
    border: 0;
    padding: 20px;
		font-size: 15px;
		color: #9adada;
		background: #ffffff;
		line-height: 22px;
		font-weight: normal;
		width: 450px;
		font-family: karlaregular;
		background-color: #ffffff;
		 resize: none; 
		background-position: top left, top right, bottom left, bottom right;
		background-repeat: no-repeat;
		background-image: url(<%= asset_path "blocks/textarea_top_left.gif" %>),
											url(<%= asset_path "blocks/textarea_top_right.gif" %>),
											url(<%= asset_path "blocks/textarea_bottom_left.gif" %>),
											url(<%= asset_path "blocks/textarea_bottom_right.gif" %>);
  }

	/* =submit */
	
	.single input[type="submit"] {
		color: #ffffff;
		display: inline-block;
		line-height: 28px;
		font-family: "Good for Nothing";
		font-size: 22px;
		padding: 25px 15px 34px 15px;
		width: 240px;
		text-align: center;
		background-color: transparent;
		background-image: url(assets/cta_aside.png);
		background-position: left top;
		background-repeat: no-repeat;
		border: 0;
		cursor: pointer;
	}
	
	.single input[type="submit"]:active {
		text-decoration: none;
		background-position: left bottom;
		padding: 41px 20px 18px 0px;
	}

	/* =ranges */
	
	.slider {
		background: #ffffff;
		height: 20px;
		position: relative;
		cursor: pointer;
		border: 0;
		width: 500px;
		display: block;
		margin-bottom: 20px;
	}

	.slider .progress {
		height: 20px;
		background-color: #D0122D;
		display: none;
	}

	.slider .handle {
		height: 55px;
		width: 50px;
		top: -18px;
		position:absolute;
		display:block;
		cursor: move;
		background: url(<%= asset_path "assets/range_handle.png" %>) no-repeat center center;
	}

	input.range {
	  display: none;
	}

/* Tables */

	table { margin-bottom: 14px; }
