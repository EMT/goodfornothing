.view_chapter header,
.view_chapter {
	background: #ffffff;
}

.view_chapter header .container {
	background: transparent;
	padding-bottom: 17px;
}

.chapter_sign_up h1 {
	width: 508px;
	height: 116px;
	margin: 0 auto 75px;
}

.chapter_sign_up h1 span {
	background: url(<%= asset_path "text/hood.gif" %>) no-repeat;
}

.splodge_list {
	list-style-type: none;
	padding: 0;
}

.splodge_list li { 
	display: inline-block;
	margin: 0 20px 15px 0;
}

.splodge_list li:nth-child(6n+6) { 
	margin-right: 0;
}

.splodge_list li a {
	display: block;
	width: 140px;
	height: 20px;
	padding: 55px 0;
	font-family: "Good for Nothing";
	text-align: center;
	background: url(<%= asset_path "assets/red_splodge.png" %>) no-repeat;
	font-size: 16px;
}

.splodge_list li:nth-child(2) a {
	
}

.splodge_list li a:hover,
.splodge_list li a:focus,
.splodge_list li a:active {
	text-decoration: none;
	background-color: #D0122D;
	color: #ffffff;
}
