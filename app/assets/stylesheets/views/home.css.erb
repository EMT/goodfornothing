.section_home #introduction h2 {
	color: #ffffff;
	background: url(<%= asset_path "assets/bubble_medium.png" %>) no-repeat;
	font-family: "Good for Nothing";
	width: 137px;
	height: 120px;
	padding: 36px 20px 20px 38px;
	text-align: left;
	line-height: 26px;
	font-size: 22px;
	float: left;
	margin-left: 30px;
}

.section_home #introduction p {
	line-height: 150px;
	opacity: 0.5;
	text-align: left;
	text-indent: 100px;
}

.section_home #community {
	width: 310px;
	padding: 0 25px;
}

.section_home #community_infographic {
	padding: 0;
	list-style-type: none;
	margin: 0;
}

.section_home #community_infographic li:first-child {
	margin: 0 auto 15px;
}

.section_home #community_infographic li:last-child {
	margin: 0 auto 7px;
}

.section_home #community .highlight_button {
	margin: 0 auto;
}


form#new_user fieldset {
	display: block;
	border-bottom: 1px dotted #000000;
	padding-bottom: 30px;
	margin-bottom: 30px;
}


