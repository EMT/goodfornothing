#profile_welcome {
	margin-bottom: 55px;
	width: 100%;
	overflow: hidden;
}

#profile_welcome h2 {
	text-align: center;
	margin-bottom: 45px;
	line-height: 32px;
}

#profile_welcome p {
	width: 500px;
	margin: 0 auto;
	text-align: center;
}

#profile_welcome ul {
	padding: 0;
	overflow: hidden;
	list-style-type: none;
	text-align: center;
	width: 560px;
	margin: 0 auto 10px;
}

#profile_welcome ul li {
	display: block;
	margin-right: 20px;
	float: left;
	width: 250px;
	margin-bottom: 15px;
	margin-left: 30px;
}

#profile_welcome ul li:last-child {
	margin: 0;
}

#profile h1 {
	margin-bottom: 10px;
}

#profile .chapter {
	font-size: 20px;
	font-family: "Good for Nothing";
	margin-bottom: 40px;
	color: #D0122D;
}

#profile .panel {
	background: #ffffff;
	padding: 22px 20px;
	width: 410px;
	min-height: 400px;
	position: relative;
}

#profile .panel h2 {
	color: #61514D;
	display: inline-block;
	padding-bottom: 10px;
	margin-bottom: 20px;
	background: url(<%= asset_path "assets/hover_2.png" %>) repeat-x bottom left;
}

#profile .panel h2:first-child {
	margin-bottom: 35px;
}

#profile .panel #profile_avatar {
	display: block;
	width: 100%;
}

#profile .panel #profile_avatar .avatar {
}

#profile .panel .call {
	margin: 0;
	position: absolute;
	bottom: 20px;
	left: 20px;
}

#profile .panel .call a {
	font-family: "Good for Nothing";
	font-size: 16px;
	color: #ffffff;
	line-height: 36px;
	height: 33px;
	display: block;
	text-align: center;
	width: 410px;
	background: url(<%= asset_path "assets/pull_button.gif"%>) no-repeat;
}

#profile .panel .call a:hover,
#profile .panel .call a:active,
#profile .panel .call a:focus {
	text-decoration: none;
	font-size: 18px;
}

#profile .panel ul {
	width: 100%;
	clear: both;
	display: block;
}

#profile .talents {
	list-style-type: none;
	text-align: center;
	padding: 0 0 85px;
}

#profile .talents li {
	display: inline-block;
	padding: 0;
	width: 99px;
	height: 85px;
	text-align: center;
	font-size: 34px;
	color: #ffffff;
	line-height: 85px;
	font-family: "Good for Nothing";
	background-color: #9adada;
	background-repeat: no-repeat;
	background-position: top left;
	margin-right: 60px;
}

#profile .talents li sub {
	font-size: 18px;
}

#profile .talents li:last-child {
	margin: 0;
}

#profile .talents li span {
	display: block;
	width: 100%;
	background: #ffffff;
	line-height: 28px;
	color: #61514D;
	font-size: 20px;
	padding-top: 10px;
}

#profile .talents .design { width: 71px; background-image: url(<%= asset_path "icons/design.gif"%>); }
#profile .talents .code { width: 87px; background-image: url(<%= asset_path "icons/code.gif"%>); }
#profile .talents .think { background-image: url(<%= asset_path "icons/think.gif"%>); }


