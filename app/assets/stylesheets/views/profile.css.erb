#profile_welcome {
	margin-bottom: 55px;
	width: 100%;
	overflow: hidden;
}

#profile_welcome h2 {
	text-align: center;
	margin-bottom: 20px;
	line-height: 32px;
}

#profile_welcome p {
	width: 550px;
	margin: 0 auto 43px;
	text-align: center;
}

#profile_welcome ul {
	padding: 0;
	overflow: hidden;
	list-style-type: none;
	text-align: center;
	width: 900px;
	margin: 0 auto 0;
}

#profile_welcome ul li {
	display: block;
	margin-right: 25px;
	float: left;
	width: 250px;
	margin-bottom: 0px;
	margin-left: 25px;
}

#profile_welcome ul li:last-child {
	margin-right: 0;
}

#profile h1 {
	margin-bottom: 10px;
}

#profile:first-child {
	padding-top: 10px;
}

#profile .panel {
	background: #ffffff;
	padding: 22px 20px;
	width: 410px;
	min-height: 400px;
	position: relative;
}

#profile .panel h3 {
	margin-bottom: 21px;
}

#profile .panel h2, #profile .panel h1 {
	color: #61514D;
	font-size: 20px;
	display: inline-block;
	padding-bottom: 10px;
	margin-bottom: 20px;
	padding-top: 0;
	line-height: 26px;
	background: url(<%= asset_path "assets/hover_2.png" %>) repeat-x bottom left;
}

#profile .panel h2:first-child, #profile .panel h1:first-child {
	margin-bottom: 35px;
}

#profile .panel #profile_avatar {
	display: block;
	width: 100%;
}

#profile .panel #profile_avatar .avatar {
}

#profile .panel ul.data {
	padding: 0;
	border-bottom: 1px solid #D0122D;
	margin-bottom: 30px;
}

#profile .panel ul.data li {
	list-style-type: none;
	padding: 5px 0;
	border-top: 1px solid #D0122D;
	color: #61514D;
	line-height: 16px;
}

#profile .panel ul.data li a {
	display: block;
	color: #61514D;
}

#profile .panel ul.data li a:hover,
#profile .panel ul.data li a:focus,
#profile .panel ul.data li a:active {
	text-decoration: none;
	color: #D0122D;
}

#profile .panel .call:last-child {
	margin: 0 0 5px;
}

#profile .panel .call a {
	font-family: "Good for Nothing";
	font-size: 16px;
	color: #ffffff;
	line-height: 36px;
	height: 33px;
	display: block;
	text-align: center;
	width: 250px;
	background: url(<%= asset_path "assets/pull_button.gif"%>) no-repeat;
}

#profile .panel .call a:hover,
#profile .panel .call a:active,
#profile .panel .call a:focus {
	text-decoration: none;
	font-size: 18px;
}

#profile .panel ul {
	width: 100%;
	clear: both;
	display: block;
}

#profile .talents {
	list-style-type: none;
	text-align: center;
	padding: 0 0 85px;
}

#profile .talents li {
	display: inline-block;
	padding: 0;
	width: 99px;
	height: 85px;
	text-align: center;
	font-size: 34px;
	color: #ffffff;
	line-height: 85px;
	font-family: "Good for Nothing";
	background-color: #9adada;
	background-repeat: no-repeat;
	background-position: top left;
	margin-right: 60px;
}

#profile .talents li sub {
	font-size: 18px;
}

#profile .talents li:last-child {
	margin: 0;
}

#profile .talents li span {
	display: block;
	width: 100%;
	background: #ffffff;
	line-height: 28px;
	color: #61514D;
	font-size: 20px;
	padding-top: 10px;
}

#profile .talents .design { width: 71px; background-image: url(<%= asset_path "icons/design.gif"%>); }
#profile .talents .code { width: 87px; background-image: url(<%= asset_path "icons/code.gif"%>); }
#profile .talents .think { background-image: url(<%= asset_path "icons/think.gif"%>); }


