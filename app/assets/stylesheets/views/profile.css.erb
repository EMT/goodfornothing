#profile_welcome {
	margin-bottom: 55px;
	width: 100%;
	overflow: hidden;
}

#profile_welcome h2 {
	text-align: center;
	margin-bottom: 45px;
	line-height: 32px;
}

#profile_welcome p {
	width: 500px;
	margin: 0 auto;
	text-align: center;
}

#profile_welcome ul {
	padding: 0;
	overflow: hidden;
	list-style-type: none;
	text-align: center;
	width: 560px;
	margin: 0 auto 10px;
}

#profile_welcome ul li {
	display: block;
	margin-right: 20px;
	float: left;
	width: 250px;
	margin-bottom: 15px;
	margin-left: 30px;
}

#profile_welcome ul li:last-child {
	margin: 0;
}

#profile .panel {
	background: #ffffff;
	padding: 20px;
	width: 410px;
	min-height: 400px;
	position: relative;
}

#profile .panel h2 {
	color: #D0122D;
	text-align: center;
}

#profile .panel #profile_avatar {
	display: block;
	width: 100%;
}

#profile .panel #profile_avatar .avatar {
}

#profile .panel .call {
	margin: 0;
	position: absolute;
	bottom: 20px;
	left: 20px;
}

#profile .panel .call a {
	font-family: "Good for Nothing";
	font-size: 16px;
	color: #ffffff;
	line-height: 36px;
	height: 33px;
	display: block;
	text-align: center;
	width: 410px;
	background: url(<%= asset_path "assets/pull_button.gif"%>) no-repeat;
}

#profile .panel .call a:hover,
#profile .panel .call a:active,
#profile .panel .call a:focus {
	text-decoration: none;
	font-size: 18px;
}

#profile .panel ul {
	width: 100%;
	clear: both;
	display: block;
}