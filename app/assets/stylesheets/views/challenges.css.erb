.section_challenges .view_show .panel {
	width: 300px;
	float: left;
}

.challenge_panel {
	width: 250px;
	height: 195px;
	margin: 0 25px 30px 0;
	float: left;
	padding: 20px;
	position: relative;
	background: url(<%= asset_path "blocks/challenge_panel.gif" %>) no-repeat top left;
}

.challenge_panel h2 {
	font-size: 20px;
	line-height: 25px;
	margin-bottom: 15px;
	font-family: karlaregular;
}

.challenge_panel h2 a {
	color: #61514D;
	display: block;
}

.challenge_panel h2 a:hover,
.challenge_panel h2 a:active,
.challenge_panel h2 a:focus {
	text-decoration: none;
	color: #D0122D;
}

.challenge_panel p.cause {
	font-size: 12px;
	position: absolute;
	bottom: 18px;
	margin: 0;
	left: 24px;
	width: 140px;
	line-height: 16px;
}

.challenge_panel .stats {
	padding: 0;
	margin: 0;
}

.challenge_panel .stats li {
	list-style-type: none;
	padding: 0 0 2px;
}

.challenge_panel .stats li span:first-child {
	font-size: 18px;
	font-family: "Good for Nothing";
	display: inline-block;
	padding-right: 4px;
}

.challenge_panel img {
	position: absolute;
	bottom: 6px;
	right: 6px;
	max-height: 70px;
}

.contributions {
	padding: 0;
	list-style-type: none;
}

.contributions li.contribution {
	border-top: 1px dotted #ffffff;
	padding: 10px 0 10px;
}

.contributions li.contribution h3 {
	text-align: left;
	font-family: karlabold;
	color: #ffffff;
}

