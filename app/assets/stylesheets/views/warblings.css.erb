#updates_list {
	list-style-type: none;
	padding: 0;
}

#updates_list li {
	padding: 0;
}

.section_warblings .grid_list {
	padding: 12px 0 20px;
}

.section_warblings.view_show aside .filter_list {
	padding-top: 106px;
}

article.warble {
	padding-top: 10px;
	margin-bottom: 50px;
}

article.warble p {
	margin-bottom: 20px;
	padding: 0 5px;
}

article.warble .warble_intro {
	position: relative;
	margin-bottom: 15px;
}

article.warble .heading {
	background: rgba(255,255,255,0.8);
	padding: 21px 20px 20px;
	position: absolute;
	bottom: 0;
	left: 0;
	width: 600px;
	min-height: 50px;
}

article.warble .heading h2 {
	float: left;
	margin: 0;
	font-size: 20px;
	line-height: 30px;
	width: 400px;
}

article.warble .heading .cta {
	float: right;
	margin: 0;
}

article.post_panel {
	overflow: hidden;
	width: 100%;
	margin-bottom: 50px;
}

article.post_panel .hero {
	float: left;
	margin-right: 20px;
}

article.post_panel .panel_content {
	float: right;
	width: 360px;
	padding-top: 1px;
}

article.post_panel .panel_content time {
	margin-bottom: 1px;
}

article.post_panel .panel_content h2 {
	font-family: karlabold;
	font-size: 19px;
	margin-bottom: 10px;
}

article.post_panel .panel_content p:last-child {
	margin: 0;
}

