.section_warblings.view_index #main,
.section_warblings.view_index #main,
.section_warblings.view_index #main {
	overflow: visible;
	width: auto;
	margin: 0;
	padding: 0;
}

.section_warblings.view_index #main #primary_content,
.section_warblings.view_index #main #primary_content,
.section_warblings.view_index #main #primary_content {
	float: none;
	width: auto;
}

/* Introduction */

	#warbling_introduction {
		text-align: center;
		padding-bottom: 50px;
	}

	#warbling_introduction h1 {
		font-size: 24px;
	}

	#warbling_introduction p {
		width: 600px; 
		display: inline-block;
		font-size: 18px;
		line-height: 24px;
	}

/* Warblers */

	#warblers {
		background: #61514D;
		color: #ffffff;
		text-align: center;
		padding: 45px 0 45px;
		margin-bottom: 60px;
	}
	
	#warblers .container {
		position: relative;
		overflow: visible;
	}

	#warblers h2 {
		color: #ffffff;
		margin-bottom: 40px;
		font-size: 24px;
		line-height: 30px;
	}

	#warblers .avatar_list {
		margin: 0 auto 0;
		width: 70%;
	}

	#warblers .avatar {
		display: inline-block;
		float: none;
	}
	
	#warblers .avatar a {
		float: left;
	}

	#warblers .avatar a:before {
		background: url(<%= asset_path "assets/avatar_mask_panel.png" %>) no-repeat center center;
	}

	#warblers .join {
		position: absolute;
		top: -65px;
		right: 160px;
		color: #ffffff;
		width: 75px;
		height: 63px;
		padding-top: 12px;
		font-size: 16px;
		line-height: 20px;
		background: url(<%= asset_path "blocks/small_speech.png" %>) no-repeat top left;
		font-family: "Good for Nothing";
	}
	
	#warblers .join:hover,
	#warblers .join:active,
	#warblers .join:focus {
		text-decoration: none;
		font-size: 19px;
	}
	
/* Issues */

	.issue_grid {
		width: 100%;
		overflow: hidden;
		margin-bottom: 50px;
	}
	
	.issue_grid h3 {
		float: left;
		width: 185px;
		padding-top: 20px;
		line-height: 25px;
		margin-right: 55px;
		margin-bottom: 0;
	}

	.issue_grid .grid_list li {
		position: relative;
		width: 185px;
		height: 184px;
		background: #ffffff;
		margin-right: 35px;
	}
	
	.single .issue_grid .grid_list li:nth-child(3n+3) { margin-right: 0; }
	
	.issue_grid ul.grid_list {
		float: left;
		width: 640px;
		padding: 0;
	}
	
	.issue_grid .grid_list li:after {
		content: '';
		display: block;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
		background: url(<%= asset_path "blocks/thumbnail_mask.png" %>) no-repeat top left;
	}
	
	.issue_grid .grid_list p {
		position: relative;
		z-index: 10;
		padding: 1px 10px 0 12px;
		margin: 0;
		line-height: 18px;
		font-size: 14px;
	}
	
	.issue_grid .grid_list p a {
		display: block;
	}

	.issue_grid .grid_list {
		padding: 30px 0 20px;
	}

	.issue_grid .grid_list li {
		margin-bottom: 0px;
	}
	
	.issue_grid .more_arrow {
		float: right;
		margin: 55px 0 0;
	}

/* Single warble */

	article.warble {
		padding-top: 10px;
		margin-bottom: 50px;
	}

	article.warble p {
		margin-bottom: 20px;
		padding: 0 5px;
	}

	article.warble .warble_intro {
		position: relative;
		margin-bottom: 15px;
		min-height: 91px;
	}

	article.warble .warble_intro img {
		display: block;
	}

	article.warble .heading {
		background: rgba(255,255,255,0.8);
		padding: 21px 20px 20px;
		position: absolute;
		bottom: 0;
		left: 0;
		width: 600px;
		min-height: 50px;
	}

	article.warble .heading h2 {
		float: left;
		margin: 0;
		font-size: 20px;
		line-height: 30px;
		width: 400px;
	}

	article.warble .heading .cta {
		float: right;
		margin: 0;
	}

	article.post_panel {
		overflow: hidden;
		width: 100%;
		margin-bottom: 50px;
		padding-top: 55px;
		background-position: top center, bottom left;
		background-repeat: no-repeat;
		background-image: url(<%= asset_path "assets/brown_squiggle.png" %>);
	}

	article.post_panel:nth-child(2) {
		padding-top: 0;
		background: transparent;
	}

	article.post_panel .hero {
		float: left;
		margin-right: 15px;
	}

	article.post_panel .panel_content {
		float: right;
		width: 360px;
	}

	article.post_panel .panel_content h2 {
		font-family: karlaregular;
		font-size: 18px;
		margin-bottom: 13px;
		line-height: 23px;
		margin-top: -4px;
	}

	article.post_panel .panel_content h2 a { display: block; }
	article.post_panel .panel_content p:last-child { margin: 0; }
