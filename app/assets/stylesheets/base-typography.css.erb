body { 
	font-family: "karlaregular", "Myriad Pro", Helvetica, Arial, sans-serif; 
	color: #333333;
	-webkit-font-smoothing: antialiased; 
}

::selection { background:#D0122D; color:#ffffff; }
::-moz-selection { background:#D0122D; color:#ffffff; }
::-webkit-selection { background:#D0122D; color:#ffffff; }

/* =h1 */

  h1 { 
    font-size: 27px; 
		line-height: 31px;
    font-weight: 100;
		padding-top: 2px;
		margin-bottom: 33px;
		font-family: "Good for Nothing";
		color: #61514d;
  }

/* =h2 */

  h2 { 
		font-size: 22px; 
		line-height: 26px;
		margin-bottom: 30px;
		font-weight: normal;
		font-family: "Good for Nothing";
		color: #61514d;
  }

	aside h2 {
		font-size: 19px;
		margin-bottom: 25px;
	}
	
	aside h2:first-child {
		padding-top: 40px;
	}

/* =h3 */

  h3 { 
    font-size: 16px; 
    margin-bottom: 10px;
		font-weight: normal;
		color: #61514d;
		font-family: "Good for Nothing";
  }

/* =p */

  p { 
    font-size: 14px;
    line-height: 21px; 
    margin-bottom: 25px;
  }

/* =a */

  a { color: #D0122D; text-decoration: none; }
  a:hover, a:focus, a:active { text-decoration: underline; }

/* =ul,ol,dl */

  ul, dl, ol { padding: 0.25em 2em 1.5em 1em; list-style-position: inside; }
  dl, ul { list-style-type: disc; }
  ol { list-style-type: decimal; }

  ol li ol, ol li ul, ul li ul, ul li ol
  { font-size: 1em; padding: 0.8em 0em 0em 1em; }

/* =li */

  li { font-size: 13px; line-height: 20px; padding-bottom: 4px; }

/* =time */

	time { 
		font-size: 14px;
		display: block; 
		font-family: karlaregular;
		color: #61514D;
		margin-bottom: 3px;
		opacity: 0.7;
	}
	
	iframe {
		display: block;
		margin: 2px 0 42px;
	}
