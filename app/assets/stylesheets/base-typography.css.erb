@font-face {
    font-family: 'LeagueGothicRegular';
    src: url('League_Gothic-webfont.eot');
    src: url('League_Gothic-webfont.eot?#iefix') format('embedded-opentype'),
         url('League_Gothic-webfont.woff') format('woff'),
         url('League_Gothic-webfont.ttf') format('truetype'),
         url('League_Gothic-webfont.svg#LeagueGothicRegular') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Reader';
    src: url('reader-medium-webfont.eot');
    src: url('reader-medium-webfont.eot?#iefix') format('embedded-opentype'),
         url('reader-medium-webfont.woff') format('woff'),
         url('reader-medium-webfont.ttf') format('truetype'),
         url('reader-medium-webfont.svg#LeagueGothicRegular') format('svg');
    font-weight: normal;
    font-style: normal;
}

body { 
	font-family: "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, "Lucida Grande", sans-serif; 
	color: #555555; 
	-webkit-font-smoothing: antialiased; 
}

/* =h1 */

  h1 { 
    font-size: 26px; 
    font-weight: 100;
		margin-bottom: 26px;
		font-family: Reader;
  }

/* =h2 */

  h2 { 
		font-size: 18px; 
		margin-bottom: 10px;
		font-weight: normal;
  }

	h2.headline {
		font-size: 22px;
		padding-bottom: 5px;
		margin-bottom: 18px;
		font-family: LeagueGothicRegular;
		text-transform: uppercase;
	}

/* =h3 */

  h3 { 
    font-size: 18px; 
    margin-bottom: 10px; 
		font-weight: normal;
  }

/* =p */

  p { 
    font-size: 13px;
    line-height: 15px; 
    margin-bottom: 15px;
  }

/* =a */

  a { color: #E31937; text-decoration: none; }
  a:hover, a:focus, a:active { text-decoration: underline; }

/* =ul,ol,dl */

  ul, dl, ol { padding: 0.25em 2em 1.5em 1em; list-style-position: inside; }
  dl, ul { list-style-type: disc; }
  ol { list-style-type: decimal; }

  ol li ol, ol li ul, ul li ul, ul li ol
  { font-size: 1em; padding: 0.8em 0em 0em 1em; }

/* =li */

  li { font-size: 13px; line-height: 15px; }

/* =time */

	time { 
		font-size: 12px; 
		line-height: 12px; 
		display: block; 
		margin-bottom: 16px;
	}
