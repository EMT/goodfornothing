<section id="primary_content" class="single">
	
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "primary slides" }) do |f| %>

		
		<%= render "shared/notices" %>
		
		<% if resource.avatar.url.nil? %>
		<fieldset class="slide slide_face">
			
			<legend>Collaboration likes faces</legend>
			
			<div class="faces">
				
			</div>
			
			<%= f.input :avatar, :label => "Select a picture" %>
			
		</fieldset>
		<% end %>
		
		<fieldset class="slide slide_skills">
			
			<legend>What can you do?</legend>			
			
			<%= f.input :brings, :label => "Do you bring any other special skills or talents to the community?", :input_html => { :rows => 7 }, :wrapper_html => { :class => "smart_label" } %>
			
		</fieldset>

		<fieldset class="slide slide_locations">
			
			<legend>Where can people find you?</legend>
				
			<%= f.input :twitter_handle, :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :url, :label => "Your digital home", :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :location, :label => "Your physical location", :wrapper_html => { :class => "smart_label" } %>
			
			<%= f.button :submit, "All done" %>
							
		</fieldset>

	<% end %>
	
</section>
