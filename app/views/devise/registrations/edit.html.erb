<section id="primary_content" class="single">
	
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

		<h1>Update your profile</h1>
		
		<%= f.error_notification %>

		<fieldset>
			<legend>Membership information</legend>
			<%= f.input :name, :required => true %>
			<%= f.input :email, :required => true %>
		</fieldset>
		
		<% if @skills.any? %>
		
			<fieldset>
				<legend>Talents</legend>
			
				<% @skills.each do |skill| %>
					<%= f.label skill.title %>
					<%= range_field_tag "skill[#{skill.id}]", resource.skill_level(skill) %>
				<% end %>
				
				<%= f.input :brings, :label => "What other special skills do you bring?" %>
				
			</fieldset>

		<% end %>

		<fieldset>
				
			<legend>Your profile</legend>
			<%= f.input :avatar %>
			<%= f.input :gender, :as => :select, :collection => ["Female", "Male", "Transgender"] %>
			<%= f.input :age %>
			<%= f.input :url, :label => "Your digital location" %>
			<%= f.input :location, :label => "Your physical location" %>
			<%= f.input :twitter_handle %>
			<%= f.input :join_mailing_list, :as => :boolean, :label => "On mailing list?" %>
		</fieldset>

		<fieldset>
			<legend>Authentication</legend>
			<%= f.input :password, :hint => "leave it blank if you don't want to change it", :required => false,  :input_html => { :autocomplete => "off" } %>
			<%= f.input :password_confirmation, :required => false, :input_html => { :autocomplete => "off" } %>
		</fieldset>

		<fieldset class="actions">
			<%= f.button :submit, "Save" %>
		</fieldset>
	<% end %>
	
</section>
