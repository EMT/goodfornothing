<section id="primary_content" class="single">
	
	<h2>Your data</h2>
	<p>If you'd want to remove all of your personal information from this site, you may <%= link_to "close your account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
		<%= f.error_notification %>

		<h1>Edit your profile</h1>

		<fieldset>
			<legend>Membership information</legend>
			<%= f.input :name, :required => true %>
			<%= f.input :email, :required => true %>
		</fieldset>
		
		<% if @skills.any? %>
		
			<fieldset>
				<legend>Talents</legend>
			
				<% @skills.each do |skill| %>
					<%= f.label skill.title %>
					<%= number_field_tag "skill[#{skill.id}]", resource.skill_level(skill) %>
				<% end %>
	
			</fieldset>

		<% end %>

		<fieldset>
			<legend>Your profile</legend>
			<%= f.input :avatar %>
			<%= f.input :gender, :as => :select, :collection => ["Female", "Male", "Transgender"] %>
			<%= f.input :age %>
			<%= f.input :url, :label => "Your digital location" %>
			<%= f.input :location, :label => "Your physical location" %>
			<%= f.input :twitter_handle %>
			<%= f.input :join_mailing_list, :as => :boolean, :label => "On mailing list?" %>
		</fieldset>

		<fieldset>
			<legend>Authentication</legend>
			<%= f.input :password, :hint => "leave it blank if you don't want to change it", :required => false,  :input_html => { :autocomplete => "off" } %>
			<%= f.input :password_confirmation, :required => false, :input_html => { :autocomplete => "off" } %>
		</fieldset>

		<fieldset class="actions">
			<%= f.button :submit, "Save" %>
		</fieldset>
	<% end %>
	
</section>
