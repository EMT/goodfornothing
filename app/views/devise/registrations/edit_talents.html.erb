<section id="primary_content" class="single">
	
	<%= simple_form_for(resource, :as => resource_name, :url => talents_path, :html => { :method => :put, :class => "primary" }) do |f| %>

		<h1>Tell us about your talents</h1>
		
		<%= render "shared/notices" %>

		<fieldset>		
			<% if @skills.any? %>
				<% @skills.each do |skill| %>
					<%= f.label skill.title %>
					<%= range_field_tag "skill[#{skill.id}]", resource.skill_level(skill) || 0, :in => 0...11, :step => 1 %>
				<% end %>
			<% end %>
			
			<%= f.input :brings, :label => "What other special skills do you bring?", :wrapper_html => { :class => "smart_label" }, :input_html => { :rows => 4 } %>
			
		</fieldset>

		<fieldset class="actions">
			<%= f.button :submit, "Save" %>
		</fieldset>
		
	<% end %>
	
</section>
