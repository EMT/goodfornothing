<section id="primary_content">

	<h1>Join the community</h1>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		
		<%= f.error_notification %>

		<fieldset>
			<legend>Membership information</legend>
			<%= f.input :name, :required => true %>
			<%= f.input :email, :required => true %>
		</fieldset>

		<fieldset>
			<legend>Your profile</legend>
			<%= f.input :avatar %>
			<%= f.input :gender, :as => :select, :collection => ["Female", "Male", "Transgender"] %>
			<%= f.input :age %>
			<%= f.input :url, :label => "Your digital location" %>
			<%= f.input :location, :label => "Your physical location" %>
			<%= f.input :twitter_handle %>
			<%= f.input :join_mailing_list, :as => :boolean, :label => "On mailing list?" %>
		</fieldset>

		<fieldset>
			<legend>Password</legend>
			<%= f.input :password, :required => false, :input_html => { :autocomplete => "off" } %>
			<%= f.input :password_confirmation, :required => false, :input_html => { :autocomplete => "off" } %>
		</fieldset>

		<fieldset class="actions">
			<%= f.button :submit, "Save" %>
		</fieldset>
		
	<% end %>

</section>