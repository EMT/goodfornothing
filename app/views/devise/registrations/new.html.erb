<section id="primary_content" class="single">

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		
		<h1 class="ir">Join the community<span></span></h1>
		
		<%= f.error_notification %>

		<fieldset class="slide warblings">
			<legend>Which issues are you most passionate about?</legend>
			<%= f.association :warblings, :as => :check_boxes, :label => "" %>
		</fieldset>
		
		<fieldset class="slide chapters">
			<legend>Which Good for Nothing chapter are you closest to?</legend>
			
			<%= f.association :chapter, :as => :radio, :label => "" %>
			
			<%= f.input :location, :as => :select, :label => "If you're not close to any, where are you?", :collection => @locations %>
			
		</fieldset>
		
		<fieldset class="slide involvement">
			<legend>Your talents</legend>
			<% if @skills.any? %>

				<% @skills.each do |skill| %>
					<%= f.label skill.title %>
					<%= number_field_tag "skill[#{skill.id}]", resource.skill_level(skill) %>
				<% end %>

			<% end %>
		</fieldset>

		<fieldset>
			<legend>Claim your profile</legend>
			<%= f.input :name, :required => true, :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :email, :required => true, :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :password, :required => false, :input_html => { :autocomplete => "off" }, :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :password_confirmation, :required => false, :input_html => { :autocomplete => "off" }, :wrapper_html => { :class => "smart_label" } %>
			
			<%= f.input :reasons_for_joining, :input_html => { :rows => 5 }, :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :join_mailing_list, :as => :boolean, :label => "Join the GFN mailing list?" %>
			<%= f.button :submit, "Apply" %>
		</fieldset>
		
	<% end %>

</section>