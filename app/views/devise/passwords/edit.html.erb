<section id="primary_content" class="single">

	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	
		<h1>New password</h1>
	  	<%= f.error_notification %>
	  	<%= f.input :reset_password_token, :as => :hidden %>
	  	<%= f.full_error :reset_password_token %>
		<fieldset>
	    	<%= f.input :password, :label => "New password", :required => true, :wrapper_html => { :class => "smart_label" } %>
	    	<%= f.input :password_confirmation, :label => "Confirm your new password", :required => true, :wrapper_html => { :class => "smart_label" } %>
		</fieldset>
	    <%= f.button :submit, "Change password" %>
	
	<% end %>

</section>