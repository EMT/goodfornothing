<section id="primary_content">

	<h1><%= @page.title %></h1>
	<%= sir_trevor_markdown(@page.body).html_safe %>
	
</section>

<aside id="secondary_content">
	
	<p class="icon_crew"><%= link_to "Chapter Wiki", pages_path %></p>
		
	<% if @pages.any? %>
	
		<ul>
			<% @pages.each do |page| %>
			<li><%= link_to page.title, page_path(page) %></li>
			<% end %>
		</ul>
		
	<% end %>
	
</aside>