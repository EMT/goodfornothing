<section id="primary_content" class="single">


	<div id="wiki_navigation">
		<% if @pages.any? %>
	
			<ul>
				<li><%= link_to "The little book", pages_path %></li>
				<% @pages.each do |page| %>
				<li <%= (@page == page) ? 'class=active' : ""%>><%= link_to page.title, page_path(page) %></li>
				<% end %>
			</ul>
		
		<% end %>
	</div>

	<div id="wiki_content">

		<h1><%= @page.title %></h1>

		<% if @page.body.is_json? %>
		<%= render_sir_trevor(@page.body) %>
		<% else %>
		<%= sir_trevor_markdown(@page.body).html_safe %>
		<% end %>
		
	</div>
	
</section>