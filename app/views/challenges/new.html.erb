<section id="primary_content" class="single">
	
	<%= simple_form_for [@challenge] do |f| %>
  
		<h1>Submit a challenge</h1>

		<p>Are you working on an innovative approach to solving a social or environmental challenge? Looking for help?</p>

		<%= field_set_tag do %>
			<%= f.input :title, :label => "Your name", :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :contact, :label => "Your email address", :wrapper_html => { :class => "smart_label" } %>
			<%= f.input :description, :label => "Summarise your challenge, include a link to your thing", :wrapper_html => { :class => "smart_label" }, :input_html => { :rows => 10 } %>
		<% end %>

		<%= field_set_tag nil, :class => "actions" do %>
			<%= f.submit :value => "Submit" %>	
		<% end %>
	
	<% end %>
	
</section>