<section id="primary_content">
	
	<h1>All <%= @chapter.title if @chapter.present? %> Gigs</h1>
		
	<% if @current_gigs.any? %>
		<h2>Upcoming gigs</h2>
		<% @current_gigs.each do |gig| %>
			<%= render :partial => "block", :locals => { :gig => gig } %>
		<% end %>
	<% end %>

	<% if @past_gigs.any? %>
		<h2>Past gigs</h2>
		<% @past_gigs.each do |gig| %>
			<%= render :partial => "block", :locals => { :gig => gig } %>
		<% end %>
	<% end %>

</section>

