<section id="primary_content">

	<h1><%= (@category) ? "Talking about #{@category.title}" : "Latest from all conversations" %></h1>
	
	<% @posts.each do |post| %>
		<article class="full">
			
			<h2><%= link_to post.title, blog_post_path(post) %></h2>
			<time><%= post.created_at.to_formatted_s(:long_ordinal) %></time>

			<% unless post.hero_image.url.nil? %>
				<%= image_tag post.hero_image, :class => "hero" %>
			<% end %>

			<%= simple_format post.excerpt %>
			
		</article>
	<% end %>
	
	<%= paginate @posts %>
	
</section>

<aside id="secondary_content">
	
	<%= render :partial => "categories" %>
	
	<% if @bookmarks.any? %>
		<h2>New additions to The Library</h2>
		<p>The Library is a place where we collect interesting stories and resources from around the web.</p>
		<ul>
		<% @bookmarks.each do |bookmark| %>
			<li><%= link_to bookmark.title, bookmark.url %></li>
		<% end %>
		</ul>
		<p class="cta">More from <%= link_to "library &rarr;".html_safe, library_bookmarks_path %></p>
	<% end %>
	
</aside>