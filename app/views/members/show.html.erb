<section id="primary_content">
	
	<h1><%= @member.name %></h1>

	<% if @member.chapter && @member.crew? %>
	<p><%= @member.short_name %> is part of the <%= link_to @member.chapter.title, chapter_gigs_path(@member.chapter) %> crew.</p>
	<% end %>

	<%= image_tag @member.avatar unless @member.avatar.url.nil? %>
	
	<ul>
		<%= "<li>Part of Good for Nothing in #{@member.chapter.title}</li>".html_safe if @member.chapter %>
		<%= "<li>Living in #{@member.location}</li>".html_safe if @member.location %>
		<%= "<li>#{@member.gender}</li>".html_safe if @member.gender %>
		<%= "<li>#{@member.age}</li>".html_safe if @member.age %>
		<%= "<li>#{link_to @member.twitter_handle, "http://twitter.com/#{@member.twitter_handle}"}</li>".html_safe if @member.twitter_handle %>
		<%= "<li>#{link_to @member.url, @member.url}</li>".html_safe if @member.url %>
	</ul>
	
	<% if @member.talents.any? %>
	<h2>Talents</h2>
	<ul>
		<% @member.talents.each do |talent| %>
		<li><%= talent.skill.title %> (<%= talent.level %>)</li>
		<% end %>
	</ul>
	<% end %>
	
	<h2>Number of people encountered in the community: <%= @member.offline_encountered.count + @member.online_encountered.count %> <%= link_to "See all", members_path if user_signed_in? && @member == current_user %></h2>
	
	<% if @member.challenges.any? %>
	<h2>Worked on these challenges:</h2>
	<ul>
		<% @member.challenges.each do |challenge| %>
		<li><%= link_to challenge.title, challenge_path(challenge) %></li>
		<% end %>
	</ul>
	<% end %>
		
	<h2>Gigs attended (<%= @member.gigs.count %>)</h2>
	<% if @member.gigs.any? %>
	<p>Gigs you've attended:</p>
	<ul>
		<% @member.gigs.each do |gig| %>
		<li><%= link_to gig.title, gig_path(gig) %></li>
		<% end %>
	</ul>
	<% end %>
	<p><%= link_to "Tell us which gigs you've attended", users_activity_path %></p>
	
	<% if @member.socials.any? %>
	<h2>Socials (<%= @member.socials.count %>)</h2>
	<p>Been to:</p>
	<ul>
		<% @member.socials.each do |social| %>
		<li><%= link_to social.title, social_path(social) %></li>
		<% end %>
	</ul>
	<% end %>
	
</section>

<aside id="secondary_content">
	
	<% if user_signed_in? && current_user == @member %>
		<p class="cta"><%= link_to "Update profile", edit_user_registration_path %>
	<% end %>
	
</aside>