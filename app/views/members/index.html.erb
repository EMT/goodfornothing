<section id="primary_content">
	<h1>Good for Nothingers</h1>
	
	<% if @member_reach.any? %>
	<h2>Collaborators</h2>
	<p>People who have attended gigs and socials with you, or who you've worked with on online challenges.</p>
	<ul>
		<% @member_reach.each do |member| %>
		<li><%= link_to member.name, member_path(member) %></li>
		<% end %>
	</ul>
	<% end %>
	
	<% if @chapter_members.any?  %>
	<h2>In your chapter</h2>
	<ul>
		<% @chapter_members.each do |member| %>
		<li><%= link_to member.name, member_path(member) %></li>
		<% end %>
	</ul>
	<% end %>
	
	<% if @chapter_members.any? || @offline_encountered_members.any? || @online_encountered_members.any? %>
	<h2>Fellow Good for Nothingers</h2>
	<% end %>
	
	<% if @members.any? %>
		<ul>
			<% @members.each do |member| %>
			<li><%= link_to member.name, member_path(member) %></li>
			<% end %>
		</ul>
	<% else %>
		<p>No one is Good for Nothing.</p>
	<% end %>
	
</section>

<aside id="secondary_content">
	<% if user_signed_in? %>
	<p class="cta"><%= link_to "View Your profile", member_path(current_user) %></p>
	<% else %>
	<p class="cta"><%= link_to "Become a member", register_path %></p>
	<% end %>
</aside>