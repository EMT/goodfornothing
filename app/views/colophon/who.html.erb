<section id="primary_content" class="single">
	
	<h1>The Good for Nothing crew</h1>
	<p>We're various people scattered around the UK.</p>	
	
	<ul class="grid_list">
		<% @chapters.each do |chapter| %>
			<li>
				<h3><%= chapter.title %></h3>
				<p><%= chapter.users.map{ |u| link_to u['name'], member_path(u) }.join(', ').html_safe %></p>
			</li>
		<% end %>
	</ul>
	
</section>