<div id="primary_content" class="single">

	<section id="latest_activity" class="panel">
		
		<div class="calendar">
			<% if @gig.present? %>
				<h2>The next gig</h2>
				<p><%= @gig.title %> on the <%= @gig.start_time.day.ordinalize %> to the <%= @gig.end_time.day.ordinalize %> of <%= @gig.start_time.strftime('%B') %> in <%= @gig.chapter.title %><br /><%= link_to "Details and registration", gig_path(@gig) %></p>
			<% end %>

			<% if @social.present? %>
				<h2>The next social</h2>
				<p>In <%= @social.chapter.title %> <%= "at #{@social.location}" if @social.location %> on <%= @social.start_time.day.ordinalize %> of <%= @social.start_time.strftime('%B') %> at <%= @social.start_time.strftime('%l%P') %><br /><%= link_to "Details and registration", social_path(@social) %></p>
			<% end %>
		</div>
		
		<p class="cta"><%= link_to "GFN Calendar", calendar_path %></p>
		
	</section>
	
	<section id="community" class="panel">
		<h2>Community</h2>
		<ul id="community_infographic">
			<li class="badge_count"><span><%= @venture_count %></span> <%= link_to "amazing ventures", ventures_path %></li>
			<li class="ticker_count"><%= spannerize("%04d" % @member_count) %> <%= link_to "Good for Nothingers", members_path %></li>
		</ul>
		<% unless user_signed_in? %>
		<p class="highlight_button"><%= link_to "Join the community", register_path %></p>
		<% end %>
	</section>
	
	<% if @update.present? %>
	<section id="updates" class="panel">
		<h2>Warblings</h2>
		<%= render :partial => "posts/block", :locals => { :post => @update } %>
	</section>
	<% end %>
	
</div>